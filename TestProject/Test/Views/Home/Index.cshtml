@model Test.Models.OrdersListView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Список заказов";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Клиенты</title>
</head>
<body>
    <div style="width: 100%; float: left;">
        <div style="float: left; width: 25%; margin: 10px; padding: 10px;">
            @foreach (Test.Models.Client c in ViewBag.Clients)
            {
                <ul>
                    @Ajax.ActionLink(c.Name, "OrdersClient", "Home", new { id = c.Id },
                        new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "results" })
                </ul>
            }
        </div>
        <br />
        <div style="float: left; width: 25%; margin: 10px; padding: 10px;" id="results">
            <h3>Все заказы</h3>
            @foreach (var o in ViewBag.Orders)
            {
            <ul>
                <li>
                    @o.Number <br />
                    @o.Description <br />
                </li>
            </ul>
            }
        </div>
    </div>
</body>
</html>